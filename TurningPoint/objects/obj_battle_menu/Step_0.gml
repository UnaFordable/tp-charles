if(active){
	hover += keyboard_check_pressed(vk_right) - keyboard_check_pressed(vk_left);
	if(hover > array_length(options)-1){
		hover = 0;
	}
	if(hover < 0){
		hover = array_length(options)-1;
	}
	if(keyboard_check_pressed(ord("Z"))){
		if(array_length(options[hover]) > 1) and (options[hover][3]==true){
			if(options[hover][1] != -1){
				var _func = options[hover][1];
				if(options[hover][2] != -1){
					script_execute_ext(_func, options[hover][2]);
				}
				else{
					_func();
				}
			}
		}
	}
	if(keyboard_check_pressed(ord("X"))){
		if(sub_menu_level > 0){
			menu_go_back();
		}
	}
}





